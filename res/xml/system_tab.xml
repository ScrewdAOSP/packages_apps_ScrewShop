<PreferenceScreen 
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <Preference
        android:key="powermenu"
        android:title="@string/power_menu"
        android:fragment="com.mrapocalypse.screwdshop.frags.PowerMenuFrag" />

    <Preference
        android:key="buttons"
        android:title="@string/buttons"
        android:fragment="com.mrapocalypse.screwdshop.frags.ButtonsFrag" />

     <Preference
        android:key="lockscreen"
        android:title="@string/lockscreen"
        android:fragment="com.mrapocalypse.screwdshop.frags.LockscreenFrag" />

     <Preference
        android:key="charging_light"
        android:title="@string/battery_light_settings"
        android:fragment="com.mrapocalypse.screwdshop.frags.BatteryLightSettings" />

     <Preference
        android:id="@+id/alarm_blocker"
        android:title="@string/alarm_blocker"
        android:fragment="com.mrapocalypse.screwdshop.frags.AlarmBlocker" />

     <Preference
        android:key="wakelock_blocker"
        android:title="@string/wakelock_blocker_title"
        android:fragment="com.mrapocalypse.screwdshop.frags.WakeLockBlocker" />

     <Preference
        android:key="device_extras_category">
        android:title="@string/op_device_extras"
        <intent android:action="com.android.settings.action.EXTRA_SETTINGS"
            android:targetPackage="com.screwd.settings.device"
            android:targetClass="com.screwd.settings.device.TouchscreenGestureSettings" />
    </Preference>

</PreferenceScreen>